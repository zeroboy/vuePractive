{
    "extends": "standard",
    "plugins": [
    "html"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions":{
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": false
    },
    "rules": {
        "no-new": "off",
        "quotes": [1, "single"],
        "spaced-comment": [2, "always", {
          "line": {
            "markers": ["/"],
            "exceptions": ["-", "+"]
          },
          "block": {
            "markers": ["!"],
            "exceptions": ["*"]
          }
        }]
    }
}
